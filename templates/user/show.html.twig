{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ user.firstName }} {{ user.lastName }}</h1>

    <table class="table col-12">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Nom de famille</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Entreprise</th>
                <td>{{ user.company }}</td>
            </tr>
            <tr>
                <th>Adresse de facturation</th>
                <td>{{ user.billingAddress }}</td>
            </tr>
            <tr>
                <th>Numéro de téléphone</th>
                <td>{{ user.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ user.creationDate | date("m/d/Y h:i") }}</td>
            </tr>


        </tbody>
    </table>

    <h3>Commandes</h3>
    <table class="table text-center col-6">
        <thead>
        <tr>
            <th>ID</th>
            <th>Etat</th>
        </tr>
        </thead>
        <tbody>

            {% for product in user.products %}
            <tr>
                <td><a href="{{ path('app_userspace_showproduct' , {'product':product.id}) }}">{{ product.id }}</a></td>
                <td>{{ product.state }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    {% if user is same as(app.user) %}
        <a class="m-2" href="{{ path('app_user_changepassword') }}"><button class="btn btn-warning">Changer mon mot de passe</button></a>
        <a class="m-2" href="{{ path('app_userspace_edit') }}"><button class="btn btn-warning">Modifier mon profil</button></a>
    {% endif %}

    {% if is_granted("ROLE_ADMIN") %}
        <a href="{{ path('app_adminspace_users') }}">Retour sur la liste</a>
        <a href="{{ path('app_adminspace_userdelete', {'user': user.id}) }}">Supprimer définitivement</a>
    {% endif %}

    <div class="col-12 justify-content-start">
        {{ include('user/_delete_form.html.twig') }}
    </div>

{% endblock %}
