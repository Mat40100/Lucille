{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Estimate</th>
                <td>{{ product.estimate }}</td>
            </tr>
            <tr>
                <th>IsValid</th>
                <td>{{ product.isValid ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsPayed</th>
                <td>{{ product.isPayed ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ product.comment }}</td>
            </tr>
            <tr>
                {% for file in product.files %}
            <tr>
                <th><a href="{{ path('app_file_downloadfile', {'file' : file.id }) }}">{{ file.name }}</a></th>
            </tr>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">back to list</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
