{{ form_start(form, {'attr': { 'class' : 'col-12 row flex-column justify-content-center align-items-center' }}) }}

    <div class="form-group text-danger">
        {{ form_errors(form) }}
    </div>

    {% if is_granted("ROLE_ADMIN") %}
        <div class="form-group row flex-column align-content-baseline justify-content-center col-lg-6 col-md-4">
            {{ form_row(form.isOffLinePayed, {'attr' :{'class': 'form-control' }}) }}
        </div>

        <div class="form-group row flex-column align-content-baseline justify-content-center col-lg-6 col-md-4">
            {{ form_row(form.state, {'attr' :{'class': 'form-control' }}) }}
        </div>

        <div class="form-group row flex-column align-content-baseline justify-content-center col-lg-6 col-md-4">
            {% if product.isValid %}
                <p>Prix : {{ product.price }}</p>
            {% else %}
                {{ form_row(form.price, {'attr' :{'class': 'form-control' }}) }}
            {% endif %}
        </div>
    {% endif %}


    <div class="form-group col-8">
        <h3>{{ form_label(form.comment) }}</h3>
        {{ form_widget(form.comment, {'attr': {'class':'form-control'}}) }}
    </div>

    <div class="row justify-content-center align-items-center p-2 m-2">
        <h3 class="col-12 text-center">Fichiers & devis</h3>

        {% include('product/files.html.twig') %}

        {% include('product/devis.html.twig') %}
    </div>

    {% if is_granted('ROLE_ADMIN') %}
        <div class="row justify-content-center align-items-center p-2 m-2">
            <h3 class="col-12 text-center">Facture & livrables</h3>

            {% include('product/livrables.html.twig') %}

            {% include('product/facture.html.twig') %}
        </div>
    {% endif %}

    <div style="display:none">{{ form_rest(form) }}</div>

    <div class="form-group justify-content-center row col-12">
        <button type="submit" class="col-auto btn btn-success">Valider</button>
    </div>
{{ form_end(form) }}

{% block javascripts %}
    {{ encore_entry_script_tags('EmbedFiles') }}

    {% if is_granted('ROLE_ADMIN') %}
        {{ encore_entry_script_tags('EmbedLivrables') }}
    {% endif %}
{% endblock %}
