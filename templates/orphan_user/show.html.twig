{% extends 'base.html.twig' %}

{% block body %}
    <h1>Utilisateur sans compte</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ orphan_user.id }}</td>
            </tr>
            <tr>
                <th>Numéro de téléphone</th>
                <td>{{ orphan_user.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Nom de famille</th>
                <td>{{ orphan_user.lastName }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ orphan_user.firstName }}</td>
            </tr>
            <tr>
                <th>Adresse postale</th>
                <td>{{ orphan_user.postalAddress }}</td>
            </tr>
            <tr>
                <th>E-mail</th>
                <td>{{ orphan_user.email }}</td>
            </tr>
            <tr>
                <th>Entreprise</th>
                <td>{{ orphan_user.company }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_adminspace_orphanedit', {'id': orphan_user.id}) }}">Modifier l'utilisateur</a>

    {{ include('orphan_user/_delete_form.html.twig') }}
{% endblock %}
